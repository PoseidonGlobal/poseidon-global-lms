# ---- Builder ----
FROM node:18-alpine AS builder

WORKDIR /app

COPY package*.json ./
RUN npm install  # <-- This MUST install devDependencies

COPY . .

RUN npm run build

# ---- Runner ----
FROM node:18-alpine

WORKDIR /app
COPY --from=builder /app/.next ./.next
COPY --from=builder /app/public ./public
COPY --from=builder /app/package*.json ./
RUN npm install --omit=dev
EXPOSE 3000

USER node

CMD ["npm", "start"]
